<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing2x</item>
        <item name="android:layout_marginEnd">@dimen/spacing2x</item>
    </style>

    <style name="MatchConstraintLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HeadingStyle" parent="SectionLayout">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="BodyStyle" parent="SectionLayout">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>
</resources>